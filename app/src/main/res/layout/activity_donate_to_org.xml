<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonateToOrg">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donating to "
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/donationDetails"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/backPurple"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/donationDetails"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Enter Details about your Donation"
        android:textColorHint="@color/darkGray"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.428"
        android:background="@color/lightGray"
        android:textColor="@color/black"
        android:padding="20dp"/>

    <Button
        android:id="@+id/donate_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Donate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donationDetails"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>